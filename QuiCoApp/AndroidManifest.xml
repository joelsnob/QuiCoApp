<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.quiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:name="com.android.quiz.QuizCopaApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.quiz.view.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.quiz.view.IniciarActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.quiz.view.CategoriaActivity"
            android:label="@string/title_activity_categoria" >
        </activity>
        <activity
            android:name="com.android.quiz.view.NivelActivity"
            android:label="@string/title_activity_nivel" >
        </activity>
        <activity
            android:name="com.android.quiz.view.QuestaoActivity"
            android:label="@string/title_activity_questao" >
        </activity>
        <activity
            android:name="com.android.quiz.view.SobreActivity"
            android:label="@string/title_activity_sobre" >
        </activity>
        <activity
            android:name="com.android.quiz.view.AjudaActivity"
            android:label="@string/title_activity_ajuda" >
        </activity>
        
    </application>

</manifest>
